<%= render 'tabs' %>
<div class="row">
	<div class="span12">
		<div id="questions">
			<% @questions.each do |question| %>
				<%= div_for(question, :class => 'clearfix') do %>
					<div class="status">
						<div class="money square"><div class="count"><%= question.money.to_i %></div>元</div>
						<div class="credit square"><div class="count"><%= question.credit %></div>积分</div>
					</div>
					<div class="summary">
						<div class="excerpt">
							<h5><%= link_to question.title, question %></h5>
						</div>
						<div class="timestamp"><%= question.answers_count %> 回答， 还剩 <%= time_ago_in_words question.created_at %></div>
					</div>
				<% end %>
			<% end %>
		</div>
		<%= paginate @questions %>
	</div>
	<div class="span4">
		<%= link_to '提 问', new_question_path, :class => 'buttonLink', :id => 'ask-question' %>
	</div>
</div>