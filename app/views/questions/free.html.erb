<%= render 'tabs' %>
<div class="row">
	<div class="span12">
		<div id="questions">
			<% @questions.each do |question| %>
				<%= div_for(question, :class => 'clearfix') do %>
					<div class="status">
						<div class="money square"><div class="count"><%= question.answers_count %></div>回答</div>
						<div class="credit square"><div class="count"><%= question.votes_count %></div>投票</div>
					</div>
					<div class="summary">
						<div class="excerpt">
							<h5><%= link_to question.title, question %></h5>
						</div>
						<div class="timestamp"><%= time_ago_in_words question.created_at %>前</div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
	<div class="span4">
		<%= link_to '提 问', new_question_path, :class => 'buttonLink', :id => 'ask-question' %>
	</div>
</div>