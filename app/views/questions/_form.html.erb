<div class="row">
	<div class="span12 columns">
		<%= form_for(@question) do |f| %>
		<fieldset>
			<div class="clearfix">
				<label for="text_area">标题</label>
				<div class="input">
					<%= f.text_area :title, :class => 'xxlarge title-height' %>
					<span class="help-block">必填，最多70个字</span>
				</div>
			</div>
			<div class="clearfix">
				<div class="input">
					<%= f.text_area :content, :class => 'xxlarge h-large' %>
					<span class="help-block">可选，详细描述你的问题</span>
				</div>
			</div>
			<div class="clearfix">
				<label for="">积分</label>
				<div class="input">
					<%= f.text_field :credit %>
				</div>
			</div>
			<div class="clearfix">
				<label for="">金钱</label>
				<div class="input">
					<%= f.select :money, 11.times.collect{|i| [i, i]}, {}, {:class => 'medium'} %> 元
				</div>
			</div>
			<div class="actions">
				<%= f.submit '提交', :class => "btn primary" %>
				<button type="reset" class="btn">取消</button>
			</div>
		</fieldset>
		<% end %>
	</div>
</div>