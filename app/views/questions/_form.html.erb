<div class="row">
	<div class="span12 columns">
		<%= form_for(@question) do |f| %>
		<fieldset>
			<div class="clearfix">
				<label for="">标题</label>
				<div class="input">
					<%= f.text_field :title, :class => 'xxlarge' %>
				</div>
			</div>
			<div class="clearfix">
				<label for="textarea">正文</label>
				<div class="input">
					<%= f.text_area :content, :class => 'xxlarge h-large' %>
					<span class="help-block">
						Block of help text to describe the field above if need be.
					</span>
				</div>
			</div>
			<div class="clearfix">
				<label for="">积分</label>
				<div class="input">
					<%= f.text_field :credit %>
				</div>
			</div>
			<div class="clearfix">
				<label for="">金钱</label>
				<div class="input">
					<%= f.text_field :money %>
				</div>
			</div>
			<div class="clearfix">
				<label for="">时限</label>
				<div class="input">
					<%= f.text_field :expire_time %>
				</div>
			</div>
			<div class="actions">
				<%= f.submit '提交', :class => "btn primary" %>
				<button type="reset" class="btn">取消</button>
			</div>
		</fieldset>
		<% end %>
	</div>
</div>