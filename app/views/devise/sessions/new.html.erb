<section id="forms">
	<div class="page-header">
  		<h1>登录</h1>
	</div>
	<div class="row">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<fieldset>
			<div class="clearfix">
				<label for="text_field">Login or Email</label>
				<div class="input">
					<%= f.text_field :login %>
				</div>
			</div>
			<div class="clearfix">
				<label for="text_field">Password</label>
				<div class="input">
					<%= f.password_field :password %>
				</div>
			</div>
			<div class="clearfix">
				<div class="input">
					<% if devise_mapping.rememberable? -%>
					  <%= f.check_box :remember_me %> <span>Remember me</span>
					<% end -%>
				</div>
			</div>
			<div class="actions">
				<%= f.submit '登录', :class => "btn primary" %>
			</div>
			<%= render :partial => "devise/shared/links" %>
		</fieldset>
		<% end %>
	</div>
</section>